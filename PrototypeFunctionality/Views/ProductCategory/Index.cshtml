@model List<ProductCategory>;

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">Product Categories</h3>
        <hr />
        <a asp-controller="ProductCategory" asp-action="Add" class="btn btn-sm btn-outline-primary">
            <i class="fa-solid fa-user-plus"></i> &nbsp;
            Add Product Category
        </a>
    </div>
</div>
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var productCategory in Model)
                        {
                            <tr>
                                <td>@productCategory.Name </td>
                                <td>
                                    <a asp-controller="ProductCategory" asp-action="Edit" asp-route-id="@productCategory.Id" class="btn btn-sm btn-outline-info">
                                        <i class="fa-regular fa-pen-to-square"></i> &nbsp;
                                        Edit
                                    </a>
                                    <a asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@productCategory.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="fa-solid fa-trash"></i> &nbsp;
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Notifaction Message -->
@if (TempData["ProductCategoryCreateNotifaction"] != null)
{
    @section Scripts
    {
    <script>
        $(function () {
            toastr.success('@TempData["ProductCategoryCreateNotifaction"]', "Success");
        });
    </script>
    }
}
